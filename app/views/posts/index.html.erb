<%= javascript_pack_tag 'index' %>

<div id="like">
  <% @posts.each do |post| %>
    <li>
      <%= post.content %>
      <p>
        <% if user_signed_in? %>
          <like-button :user-id="<%= current_user.id %>" :post-id="<%= post.id %>"></like-button>
        <% end %>
      </p>
    </li>
  <% end %>
</div>

